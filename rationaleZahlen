;; The first three lines of this file were inserted by DrRacket. They record metadata
;; about the language level of this file in a form that our tools can easily process.
#reader(lib "htdp-beginner-reader.ss" "lang")((modname rationaleZahlen) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
;Datenstrktur für rationale zahlen

;interne datenstruktur
(define-struct xy (x y))

;make-rat: number number -> rat
;Konstruktor
(define (make-rat n d)
  (make-xy n d))

;numer: rat -> numer
; Selektor für den Zähler einer rationalen Zahl
(define (numer rat)
  (xy-x rat))
; mul-rat: rat rat->  rat
; Multipliziert zwei rationale Zahlen
; Beispiel: (mul-rat (make-rat 1 2) (make-rat 2 3))
; ergibt (make-rat 2 6)

(define (mul-rat x y)
  (make-rat (* (numer x) (numer y))
            (* (denom x) (denom y))))

; add-rat: rat rat -> rat
; Addiert zwei rationale Zahlen.
; Beispiel: ...

(define (add-rat x y)
  (make-rat (+ (* (numer x) (numer y))
               (* (numer x) (numer y)))
            (* (denom x) (denom y))))

; equal-rat?: rat rat -> boolean
; vergleicht zwei rationale Zahlen.
; Beispiel: ...

(define (equal-rat? x y)
  (= (* (numer x) (numer y))
     (* (numer y) (numer x))))

; print-rat: rat-> String(was es ja eigentlich gar nicht gibt)
;wandelt eine rationale zahl in eine "hübschen" String um
; was es ja eigentlich gar nicht gibt
; Beispiel: (print-rat (maake-rat 6 7) ) erbibt 6/7
(define (print-rat x)
  (string-append
   (number->string (numer x))
   "/"
   (number->string (denom x))))

(define eindrittel (make-rat 1 3)
 (definde vierfünftel (make-rat 4 5)